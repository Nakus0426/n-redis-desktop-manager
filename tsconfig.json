{
	"compilerOptions": {
		"target": "esnext",
		"useDefineForClassFields": true,
		"module": "esnext",
		"moduleResolution": "node",
		"strict": false,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"types": ["tdesign-vue-next/global", "@intlify/unplugin-vue-i18n/messages"],
		"lib": ["esnext", "dom"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": ["**/*.tsx", "**/*.ts", "**/*.vue"],
	"exclude": ["node_modules", "**/*.js", "dist"]
}
